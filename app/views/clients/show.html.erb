
  <div class="row">
    <h1><%= @client.name %></h1>
      <div class="row">
        <div class="input-field col s6">
          <%= link_to "Ver fotos", @client.url, class: "btn btn-primary waves-effect" %>
        </div>
        <div class="input-field col s6">
          <strong>Code:</strong>
          <%= @client.unique_repair_id %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <strong>Model:</strong>
          <%= @client.car_model %>
        </div>
        <div class="input-field col s6">
          <strong>Year:</strong>
          <%= @client.car_year %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <strong>Email:</strong>
          <%= @client.email %>
        </div>
        <div class="input-field col s6">
          <strong>Telephone:</strong>
          <%= @client.telephone %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <strong>Serial coche:</strong>
          <%= @client.serial %>
        </div>
        <div class="input-field col s6">
          <%= link_to "Enviar correo", '#' , class: "btn btn-primary waves-effect" %>
        </div>

      </div>

      <br>
    <%= link_to "Crear otro Cliente", new_client_path,  class: "btn waves-effect light-blue lighten-1" %>

    <%= link_to "Inicio Clientes", clients_path, class: "btn waves-effect waves-light red lighten-3" %>
  </div>
